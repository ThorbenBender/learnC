#include <stdio.h>
#include <string.h>

const int N = 4;

float average(int array[]) {
  int sum = 0;
  for (int i = 0; i < N; i++) {
    sum += array[i];
  }
  return sum / (float)N;
}

int main(void) {
  char name[20] = "THorben";
  int scores[N];
  for (int i = 0; i < N; i++) {
    printf("Score: ");
    scanf("%i", &scores[i]);
  }

  printf("Average: %f\n User: %s\n", average(scores), name);
}
